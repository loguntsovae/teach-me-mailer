# Test environment configuration for teach-me-mailer
# This file is used for running tests with PostgreSQL on localhost

# Database Configuration (Test DB)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/test_teach_me_mailer

# Application Settings
APP_NAME=test-mail-gateway
APP_VERSION=0.1.0-test
DEBUG=true
LOG_LEVEL=DEBUG

# SMTP Settings (Mocked in tests)
SMTP_HOST=smtp.test.com
SMTP_PORT=587
SMTP_USER=test@test.com
SMTP_PASSWORD=test_password
SMTP_STARTTLS=true
SMTP_FROM=noreply@test.com

# Rate Limiting
DEFAULT_DAILY_LIMIT=100
RATE_WINDOW_DAYS=1

# Security
APP_SECRET_KEY=test-secret-key-for-testing-only-do-not-use-in-production

# Domain Allowlist (empty for tests - all domains allowed)
ALLOW_DOMAINS=

# Monitoring (disabled for tests)
SENTRY_DSN=
